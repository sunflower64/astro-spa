---
interface Props{
  classtai?: string;
}

const {titulo} = Astro.props
const {descripcion} = Astro.props
const {imgRuta} = Astro.props
const {url} = Astro.props
---

<div class="max-w-3xl bg-red-200 mx-auto mb-4 px-2">
  
<div class="flex md:flex-row flex-col justify-between">
 
<div class="flex md:my-auto flex-col my-4 px-2 mx-auto text-center">
  <h1 class="font-semibold text-xl text-bold">{titulo}</h1>
  <p class="py-2">{descripcion}</p>
  <a class="bg-primary hover:primary-hover text-white font-semibold rounded-md my-4 mx-auto py-2 px-6" href={url}>Ver mas</a>
</div>

<img class="object-cover h-96 w-96 rounded-lg m-auto" src={imgRuta} alt="">
</div>
</div>
